<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dokalab.blog.category.CategoryMapper">
    <resultMap id="categoryResultMap" type="com.dokalab.blog.category.model.Category">
        <id property="categoryId" column="category_id" />
        <result property="categoryName" column="category_name" />
<!--        <result property="superCategoryId" column="super_category_id" />-->
<!--        <association property="parentCategory" resultMap="categoryResultMap" />-->
        <collection property="subCategories" ofType="com.dokalab.blog.category.model.Category"
                    select="findSubCategoriesByParentCategoryId" column="category_id" />
    </resultMap>

    <select id="findAllCategories" resultMap="categoryResultMap">
        select * from tbl_category
        where super_category_id is null
    </select>

    <select id="findSubCategoriesByParentCategoryId" resultMap="categoryResultMap">
        select * from tbl_category where super_category_id = #{categoryId}
    </select>

    <select id="findCategoryByCategoryId" resultMap="categoryResultMap">
        select * from tbl_category where category_id = #{categoryId}
    </select>



</mapper>
